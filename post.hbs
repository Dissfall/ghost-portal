{{!< default}} 

{{#post}} 
<article class="max-w-7xl mx-auto text-white pt-24 px-4 sm:px-6 lg:px-8 flex-grow {{post_class}}">
    <!-- Feature Image and optional caption -->
    {{#if feature_image}}
    <div class="flex flex-col items-center">
        <img class="w-full h-auto max-w-4xl rounded-lg shadow-lg" 
             srcset="{{img_url feature_image size='s'}} 300w, 
                     {{img_url feature_image size='m'}} 600w, 
                     {{img_url feature_image size='l'}} 1000w, 
                     {{img_url feature_image size='xl'}} 2000w"
             sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 700px"
             src="{{img_url feature_image size='m'}}"
             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <p class="text-center text-sm mt-2 text-gray-400">
            {{feature_image_caption}}
        </p>
        {{/if}}
    </div>
    {{/if}}

    <!-- Post Title -->
    <h1 class="text-4xl font-bold text-indigo-200 my-6 text-center">{{title}}</h1>

    <!-- Reading Time Indicator -->
    {{#if @custom.display_time_to_read_for_articles}}
      <div class="flex items-center justify-center text-gray-300 text-sm mb-6">
          <!-- Clock Icon -->
          <svg class="w-4 h-4 mr-1 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="Reading time icon">
              <!-- Clock face -->
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"></circle>
              <!-- Clock hands -->
              <path stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2"></path>
          </svg>
          <!-- Reading Time Text -->
          <span>{{reading_time}}</span>
      </div>
    {{/if}}

    <!-- Post Content -->
    <div class="post-content prose mx-auto">
        {{content}}
    </div>

    <!-- Comments Section -->
    <div class="mt-16 mx-auto">
        {{comments}}
    </div>
</article>
{{/post}}
