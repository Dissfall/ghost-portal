{
  "name": "portal",
  "description": "Minimalist ghost theme",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": {
    "name": "Heorhi Lukyanau",
    "email": "heorhi@lukyanau.me",
    "url": "lukyanau.me"
  },
  "keywords": [
    "portal",
    "Heorhi Lukyanau",
    "ghost",
    "ghost-theme"
  ],
  "scripts": {
    "start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
    "tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
  },
  "screenshots": {
    "desktop": "assets/hello-world-thumb.png"
  },
  "config": {
    "custom": {
      "display_site_info": {
        "type": "boolean",
        "default": true
      },
      "display_jump_to_top_button": {
        "type": "boolean",
        "default": true
      },
      "number_of_post_card_columns": {
        "type": "select",
        "options": [
          "2",
          "3"
        ],
        "default": "2",
        "group": "homepage"
      },
      "display_authors_on_post_cards": {
        "type": "boolean",
        "default": true,
        "group": "homepage"
      },
      "display_time_to_read_for_articles": {
        "type": "boolean",
        "default": true,
        "group": "post"
      }
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.6",
    "@tailwindcss/typography": "^0.5.16",
    "masonry-layout": "^4.2.2",
    "postcss-cli": "^11.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2",
    "tailwindcss": "^3.4.17"
  }
}
