{
  "name": "portal",
  "description": "Minimalist ghost theme",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": {
    "name": "Heorhi Lukyanau",
    "email": "heorhi@lukyanau.me",
    "url": "lukyanau.me"
  },
  "keywords": [
    "portal",
    "Heorhi Lukyanau",
    "ghost",
    "ghost-theme"
  ],
  "scripts": {
    "start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
    "tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
  },
  "screenshots": {
    "desktop": "assets/hello-world-thumb.png"
  },
  "config": {
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "posts_per_page": 10,
    "card_assets": true
  },
  "config": {
    "custom": {
      "display_site_info": {
        "type": "boolean",
        "default": true
      }
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.6",
    "@tailwindcss/typography": "^0.5.16",
    "postcss-cli": "^11.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2",
    "tailwindcss": "^3.4.17"
  }
}
