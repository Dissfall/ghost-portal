{{!< default}} 

{{#post}} 
  <main>
<article class="max-w-7xl mx-auto text-white pt-24 px-4 sm:px-6 lg:px-8 flex-grow {{post_class}}">
  {{#match @page.show_title_and_feature_image}}
    <!-- Post Title -->
    <h1 class="text-4xl font-bold text-indigo-200 my-6">{{title}}</h1>

    <!-- Feature Image and optional caption -->
    {{#if feature_image}}
    <div class="flex flex-col items-center">
        <img class="w-full h-auto max-w-4xl rounded-lg shadow-lg" 
             srcset="{{img_url feature_image size='s'}} 300w, 
                     {{img_url feature_image size='m'}} 600w, 
                     {{img_url feature_image size='l'}} 1000w, 
                     {{img_url feature_image size='xl'}} 2000w"
             sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 700px"
             src="{{img_url feature_image size='m'}}"
             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <p class="text-center text-sm mt-2 text-gray-400">
            {{feature_image_caption}}
        </p>
        {{/if}}
    </div>
    {{/if}}
  {{/match}}

    <!-- Post Content -->
    <section class="post-content prose">
        {{content}}
    </section>

    <!-- Comments Section -->
    <div class="mt-16">
        {{comments}}
    </div>
</article>
</main>
{{/post}}
